<!DOCTYPE html>
<html lang="en">
    <%- include('partials/head') %> 
    
    <body>
        <div class="container mt-5">
            <!-- TODO: Edit the button -->
            <!-- <button class="btn btn-primary register" type="button">
                <a href="/create-user"
                    ><i class="fa-solid fa-circle-plus"></i> Add New User</a
                >
            </button>
            <br /> -->
            <table
                class="table table-striped table-hover table-borderless table-responsive card-1 p-4"
            >
                <thead>
                    <tr class="border-bottom text-center">
                        <th>
                            <span class="ml-2">Id</span>
                        </th>
                        <th>
                            <span class="ml-2">Username</span>
                        </th>
                        <th>
                            <span class="ml-2">Email</span>
                        </th>
                        <th>
                            <span class="ml-4">Role</span>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i<users.data.length; i++) { %>
                    <tr class="border-bottom text-center">
                        <td>
                            <div class="p-2">
                                <span class="font-weight-bold"
                                    ><%= users.data[i].id %></span
                                >
                            </div>
                        </td>
                        <td>
                            <div class="p-2">
                                <span class="font-weight-bold"
                                    ><%= users.data[i].username %></span
                                >
                            </div>
                        </td>
                        <td>
                            <div class="p-2">
                                <span class="font-weight-bold"
                                    ><%= users.data[i].email %></span
                                >
                            </div>
                        </td>
                        <td>
                            <div class="p-2">
                                <span class="font-weight-bold"
                                    ><%= users.data[i].role %></span
                                >
                            </div>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
        <%- include('partials/script') %> 
    </body>
</html>
